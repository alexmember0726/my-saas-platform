generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  email     String       @unique
  password  String
  name      String?
  createdAt DateTime     @default(now())
  organizations Organization[] // Relations to orgs
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  description String?
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  projects  Project[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id            String     @id @default(cuid())
  name          String
  description   String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  apiKeys       ApiKey[]
  allowedDomains String[]   // Domains allowed for event tracking
  featureToggles Json?      // Optional feature toggles per project
  events        Event[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime @updatedAt
}

model ApiKey {
  id        String   @id @default(cuid())
  name       String?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  apiKey    String  // api key
  keyHash   String   // hashed long-lived secret
  last4     String // last 4 chars of secret key
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  rotatedAt  DateTime?
}

model Event {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  name      String
  metadata  Json?
  createdAt DateTime @default(now())
}
